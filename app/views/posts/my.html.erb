<div class="content-header">
  <%= link_to('Create Post', new_post_path, :class => "btn btn-success log-button") %>
</div>
<div id="posts">
  <% if @posts.count > 0 %>
    <% @posts.each do |p| %>
      <%= render "my_post", post: p %>
    <% end %>
    <%= paginate @posts %>
  <% else  %>
    <div class='post'>
      <div class='post-content'>
        <div class='post-title' style='text-align: center;'>You Have Not Created Any Posts Yet</div>
      </div>
    </div>
  <% end %>
</div>
<div class="content-footer"></div>
