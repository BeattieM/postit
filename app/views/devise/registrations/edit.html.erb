<div class="modal-content">
  <div id="div-forms">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="modal-body">
        <div id="div-login-msg" class="<%= flash[:alert] ? ((flash[:alert].include? 'Invalid') ? 'error' : '') : '' %>">
          <span id="text-login-msg">
            <%= flash[:alert] ? flash[:alert] : "" %>
          </span>
        </div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: "", autocomplete: "off"%>
        </div>
        <br />
        <div class="field">
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: "" %>
        </div>
        <br />
        <div class="field">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: "" %>
        </div>
        <br />
        <div class="field">
          <%= f.password_field :current_password, class: "form-control", placeholder:'we need your current password to confirm your changes', autocomplete: "off" %>
        </div>
      </div>
      <div class="modal-footer">
        <div class="actions">
          <%= f.submit "Update", class: "btn btn-success btn-lg btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
